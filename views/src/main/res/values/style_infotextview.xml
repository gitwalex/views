<?xml version="1.0" encoding="utf-8"?>
<resources>
    <attr name="infoTextViewStyle" format="reference" />
    <attr name="popupWidth" format="dimension" />
    <attr name="iconPadding" format="dimension" />
    <declare-styleable name="InfoTextView">
        <attr name="infoText" format="reference" />
        <attr name="iconPadding" />
        <attr name="popupWidth" />
        <attr name="infoType" format="enum">
            <enum name="popup" value="0" />
            <enum name="dialog" value="1" />
        </attr>
    </declare-styleable>

    <style name="Gerwalex.InfoTextViewStyle" parent="Widget.AppCompat.TextView">
        <item name="popupWidth">@dimen/popupWidth</item>
        <item name="iconPadding">@dimen/iconPadding</item>
    </style>

    <color name="infotext_popupbackground">#F0FFFF</color>

    <dimen name="popupWidth">100dp</dimen>
    <dimen name="iconPadding">8dp</dimen>

</resources>